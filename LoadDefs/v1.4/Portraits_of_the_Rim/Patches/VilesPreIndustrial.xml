<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
	<mods>
		<li>HMC Vile's Pre-Industrial Overhaul</li>
	</mods>
		<match Class="PatchOperationSequence">
			<operations>

			<li Class="PatchOperationAdd">
				<xpath>Defs</xpath>
				<value>
					<PortraitsOfTheRim.PortraitElementDef>
						<defName>PR_InnerClothingTorso_VilePreIndus-l-strawcape</defName>
						<portraitLayer>PR_OuterClothingShoulder</portraitLayer>
						<graphicData>
							<texPath>OuterClothingShoulder/Straw-l-cape</texPath>
						</graphicData>
						<requirements>
							<bodyType>Large</bodyType>
							<apparels>
								<li>Apparel_TribalA</li>
							</apparels>
						</requirements>
					</PortraitsOfTheRim.PortraitElementDef>

					<PortraitsOfTheRim.PortraitElementDef>
						<defName>PR_InnerClothingTorso_VilePreIndus-m-strawcape</defName>
						<portraitLayer>PR_OuterClothingShoulder</portraitLayer>
						<graphicData>
							<texPath>OuterClothingShoulder/Straw-m-cape</texPath>
						</graphicData>
						<requirements>
							<bodyType>Medium</bodyType>
							<apparels>
								<li>Apparel_TribalA</li>
							</apparels>
						</requirements>
					</PortraitsOfTheRim.PortraitElementDef>

					<PortraitsOfTheRim.PortraitElementDef>
						<defName>PR_InnerClothingTorso_VilePreIndus-s-strawcape</defName>
						<portraitLayer>PR_OuterClothingShoulder</portraitLayer>
						<graphicData>
							<texPath>OuterClothingShoulder/Straw-s-cape</texPath>
						</graphicData>
						<requirements>
							<bodyType>Small</bodyType>
							<apparels>
								<li>Apparel_TribalA</li>
							</apparels>
						</requirements>
					</PortraitsOfTheRim.PortraitElementDef>

					<PortraitsOfTheRim.PortraitElementDef>
						<defName>PR_InnerClothingTorso_VilePreIndus-xl-strawcape</defName>
						<portraitLayer>PR_OuterClothingShoulder</portraitLayer>
						<graphicData>
							<texPath>OuterClothingShoulder/Straw-xl-cape</texPath>
						</graphicData>
						<requirements>
							<bodyType>ExtraLarge</bodyType>
							<apparels>
								<li>Apparel_TribalA</li>
							</apparels>
						</requirements>
					</PortraitsOfTheRim.PortraitElementDef>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/PortraitsOfTheRim.PortraitElementDef[defName="PR_InnerClothingTorso_Vanilla-l-tribalwear"]/requirements/apparels</xpath>
				<value>
					<apparels>
						<li>Norballo_Loincloth</li>
					</apparels>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/PortraitsOfTheRim.PortraitElementDef[defName="PR_InnerClothingTorso_Vanilla-m-tribalwear"]/requirements/apparels</xpath>
				<value>
					<apparels>
						<li>Norballo_Loincloth</li>
					</apparels>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/PortraitsOfTheRim.PortraitElementDef[defName="PR_InnerClothingTorso_Vanilla-s-tribalwear"]/requirements/apparels</xpath>
				<value>
					<apparels>
						<li>Norballo_Loincloth</li>
					</apparels>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/PortraitsOfTheRim.PortraitElementDef[defName="PR_InnerClothingTorso_Vanilla-xl-tribalwear"]/requirements/apparels</xpath>
				<value>
					<apparels>
						<li>Norballo_Loincloth</li>
					</apparels>
				</value>
			</li>


			</operations>
		</match>
    </Operation>
	
</Patch>