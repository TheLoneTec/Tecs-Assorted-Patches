		<thingCategories>
			<li>Manufactured</li>
		</thingCategories>
	</ThingDef>
	
	<!-- ==================== Recipes ========================== -->

	<RecipeDef ParentName="AmmoRecipeNeolithicBase">
		<defName>Make_Outpost_Materials</defName>
		<label>make outpost construction materials</label>
		<description>Craft 50 outpost construction materials.</description>
		<jobString>Making construction materials.</jobString>
		<workAmount>500</workAmount>
		<workSpeedStat>SmithingSpeed</workSpeedStat>
		<effectWorking>MakeWoodPlanks_Electric</effectWorking>
		<soundWorking>Recipe_Machining</soundWorking>
		<recipeUsers>
			<li>CraftingSpot</li>
			<li>FabricationBench</li>
			<li>AdvToolBench</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Woody</li>
					</categories>
				</filter>
				<count>200</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>Metallic</li>
					</categories>
				</filter>
				<count>200</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>ComponentIndustrial</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>Wooden</li>
				<li>Metallic</li>
			</categories>
			<thingDefs>
				<li>ComponentIndustrial</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<OutpostMaterials>50</OutpostMaterials>
		</products>
	    <researchPrerequisite>Construction_B2</researchPrerequisite>
	</RecipeDef>
	
</Defs>
