<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ThingDef ParentName="SK_ResourceBase">
		<defName>SeedCultivator</defName>
		<label>seed cultivator</label>
		<description>a machine capable of cultivating different kinds of seeds that have been researched.</description>
		<graphicData>
			<texPath>Things/Resources/OutpostCrate</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Standard_Drop</soundInteract>
		<soundDrop>Standard_Drop</soundDrop>
		<stackLimit>1</stackLimit>
		<techLevel>Spacer</techLevel>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<MarketValue>30</MarketValue>
			<Flammability>1.0</Flammability>
			<DeteriorationRate>1</DeteriorationRate>
			<Mass>35.0</Mass>
			<Bulk>5.0</Bulk>
		</statBases>
		<intricate>true</intricate>
		<thingCategories>
			<li>Manufactured</li>
		</thingCategories>
		<stuffCategories>
			<li>SolidMetallic</li>
		</stuffCategories>
		<costStuffCount>120</costStuffCount>
		<costList>
			<ComponentIndustrial>10</ComponentIndustrial>
			<Plastic>30</Plastic>
			<Biomatter>25</Biomatter>
			<BioMicrochips>1</BioMicrochips>
		</costList>
		<recipeMaker>
		  <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		  <workSkill>Crafting</workSkill>
		  <unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
		  <effectWorking>Smith</effectWorking>
		  <soundWorking>EPOEAssembling</soundWorking>
		  <recipeUsers>
			<li>FabricationBench</li>
			<li>AdvToolBench</li>
		  </recipeUsers>
		  <researchPrerequisite>Hydroponics</researchPrerequisite>
		</recipeMaker>
	</ThingDef>
	
