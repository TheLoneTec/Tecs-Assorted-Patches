	<ThingDef ParentName="SK_ResourceBase">
		<defName>OutpostMaterials</defName>
		<label>outpost construction materials</label>
		<description>Various base materials needed to establish an outpost.</description>
		<graphicData>
			<texPath>Things/Resources/OutpostCrate</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Standard_Drop</soundInteract>
		<soundDrop>Standard_Drop</soundDrop>
		<stackLimit>50</stackLimit>
		<techLevel>Medieval</techLevel>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<MarketValue>300</MarketValue>
			<Flammability>1.0</Flammability>
			<DeteriorationRate>1</DeteriorationRate>
			<Mass>50.0</Mass>
			<Bulk>5.0</Bulk>
		</statBases>
