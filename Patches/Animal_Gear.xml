<?xml version="1.0" encoding="utf-8" ?>

<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Animal Gear</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
	
				<li Class="PatchOperationReplace">
				  <xpath>Defs/PawnKindDef/apparelTags/li[text()="Animal"]</xpath>
				  <value>
					<li>PrimitiveClothing</li>
				  </value>
				</li>
	
				<li Class="PatchOperationReplace">
				  <xpath>Defs/ThingDef[@ParentName="ApparelNeoliticBase"]/apparel/tags/li[text()="Animal"]</xpath>
				  <value>
					<li>PrimitiveClothing</li>
				  </value>
				</li>
	
			</operations>
		</match>
	</Operation>

</Patch>
