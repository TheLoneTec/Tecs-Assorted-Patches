<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
	<mods>
		<li>Shield Generators by Frontier Developments SK</li>
	</mods>
	<match Class="PatchOperationSequence">
		<operations>

            <li Class="PatchOperationReplace">
                <xpath>Defs/ResearchProjectDef[defName="ShieldGenerator"]/researchViewX</xpath>
                <value>
                    <researchViewX>25.00</researchViewX>
                </value>
            </li>
            <li Class="PatchOperationReplace">
                <xpath>Defs/ResearchProjectDef[defName="ShieldGenerator"]/researchViewY</xpath>
                <value>
                    <researchViewY>11.00</researchViewY>
                </value>
            </li>

            <li Class="PatchOperationReplace">
                <xpath>Defs/ResearchProjectDef[defName="ShieldGeneratorLarge"]/researchViewX</xpath>
                <value>
                    <researchViewX>26.00</researchViewX>
                </value>
            </li>
            <li Class="PatchOperationReplace">
                <xpath>Defs/ResearchProjectDef[defName="ShieldGeneratorLarge"]/researchViewY</xpath>
                <value>
                    <researchViewY>11.00</researchViewY>
                </value>
            </li>

            <li Class="PatchOperationReplace">
                <xpath>Defs/ResearchProjectDef[defName="ShieldGeneratorPortable"]/researchViewX</xpath>
                <value>
                    <researchViewX>26.00</researchViewX>
                </value>
            </li>
            <li Class="PatchOperationReplace">
                <xpath>Defs/ResearchProjectDef[defName="ShieldGeneratorPortable"]/researchViewY</xpath>
                <value>
                    <researchViewY>12.00</researchViewY>
                </value>
            </li>

		</operations>
		</match>
    </Operation>	
</Patch>	